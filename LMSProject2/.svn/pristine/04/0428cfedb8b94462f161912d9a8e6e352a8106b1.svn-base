@import url('https://fonts.googleapis.com/css2?family=Black+Han+Sans&family=Poppins:wght@200&family=Raleway:wght@200&display=swap');
@font-face {
    font-family: 'GmarketSansMedium';
    src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2001@1.1/GmarketSansMedium.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body{
    margin: 0;
    padding: 0;
    
}

section{
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    width: 100%;
    background-image: url('/resources/images/bg3.jpg');
    background-position: center;
    background-size: cover;
    place-content: center;
    position: relative;
    isolation: isolate;
}

section::after{
    content: '';
    position: absolute;
    z-index: -1;
    inset: 0;
    background: black;
    opacity: .3;
}



.main-container{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-color: #fff;
    padding: 25px;
    border-radius: 10px;
    

}

#logo{
    width: 200px; 
/*     margin: 10px 40px 30px 0; */
}

#univName{
	font-family: 'GmarketSansMedium';
	font-size: 40px;
    letter-spacing: 2px;
}


.main-container h2{
    margin: 10px 0 50px 0;
    color: #0b4085;
    font-size: 50px;
    font-family: 'Black Han Sans', sans-serif;
    font-weight: 100;
}
.main-container h2 p{
    color: darkgray;
    font-size: 17px;
    font-family: 'Raleway', sans-serif;
    font-weight: 1000;
    text-align: center;
}

.radio-button{
    width: 100%;
    margin: 0;
    text-align: center;
}

.custom-radio > input{
    display: none;
    
}

.radio-btn{
    margin: 10px;
    width: 120px;
    height: 140px;
    border: 3px solid transparent;
    display: inline-block;
    border-radius: 10px;
    position: relative;
    text-align: center;
    box-shadow: 0 0 20px #c3c3c367;
}

.radio-btn>i{
    color: #fff;
    background-color: #0b4085;
    font-size: 20px;
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%) scale(4);
    border-radius: 50px;
    padding: 3px;
    transition: 0 .2s;
    pointer-events: none;
    opacity: 0;
}


.radio-btn .user-icon{
    width: 80px;
    height: 80px;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.radio-btn .user-icon i{
    color: black;
    line-height: 80px;
    font-size: 45px;
}

.radio-btn .user-icon h4 {
    color: #0b4085;
    font-family: 'Poppins', sans-serif;
    font-size: 15px;
    font-weight: 600;
    text-transform: uppercase;
}

.custom-radio input:checked + .radio-btn {
    border: 3px solid #0b4085;
}

.custom-radio input:checked+ .radio-btn> i{
    opacity: 1;
    transform: translateX(-50%) scale(1);
}

.login-info {
    position: relative;
    margin: 30px 0;
    width: 450px;
    border-bottom: 1px solid #0b4085;
}

.login-info label {
    position: absolute;
    top: 50%;
    left: 5px;
    transform: translateY(-50%);
    color: #f39237;
    font-size: 1em;
    pointer-events: none;
    transition: .5s;
    font-family: 'poppins', sans-serif;
    font-weight: 700;
}
.login-info input{
    width: 100%;
    height: 50px;
    background: transparent;
    border: none;
    outline: none;
    font-size: 1.2em;
    padding:0 35px 0 5px;
    color: #0b4085;
}
.login-info > i {
    position: absolute;
    right: 8px;
    /* color: #8373e6; */
    color: #0b4085;
    font-size: 1.2em;
    top: 20px;
}
.login-info > input:focus ~ label,
input:valid ~ label{
top: -5px;
}
.login-info > input::placeholder {
    font-size: 14px;
    color: darkgray;
}

.forget{
    margin: -15px 0 30px ;
    font-size: .9em;
    /* color: #8373e6; */
    color: #0b4085;
    display: flex;
    /* justify-content: space-between; */
    justify-content: end;
    font-family: 'Poppins', sans-serif;
}

.forget label input{
    margin-right: 3px;
    
}
.forget a{
    /* color: #8373e6; */
    color: #0b4085;
    color: slategrey;
    text-decoration: none;
    font-family: 'poppins', sans-serif;
}
.forget a:hover{
/*     text-decoration: underline; */
    color: #0b4085;
}

input#chBtn{
    display: none;
}

input#chBtn + label{
    display: pointer;
}

/*input 바로 다음의 label:before 에 체크하기 전 CSS 설정*/
input#chBtn + label:before{
    content: "";
    display: inline-block;
    width: 17px;
    height: 17px;
    line-height: 17px;
    border: 1px solid #cbcbcb;
    vertical-align: middle;
    /*체크 전과 체크 후 높이 차이 때문에 설정*/
}

/*checked된 input 바로 다음의 label:before 에 체크 후 CSS 설정*/
input#chBtn:checked + label:before{
    content:"\f00c";/*폰트어썸 유니코드*/
    font-family:"Font Awesome 5 free"; /*폰트어썸 아이콘 사용*/
    font-weight:900;/*폰트어썸 설정*/
    color:#fff;
    background-color:#0b4085;
    border-color:#0b4085;
    font-size:13px;
    text-align:center;
}

#loginBtn{
    width: 100%;
    height: 40px;
    /* border-radius: 40px; */
    background: #0b4085;
    border: none;
    outline: none;
    cursor: pointer;
    font-size: 1em;
    font-weight: 600;
    color: #fff;
    font-family: 'poppins', sans-serif;
    border-radius: 10px;
}

.register{
    font-size: .7em;
    color: grey;
    text-align: center;
    margin: 25px 0 10px;
}



