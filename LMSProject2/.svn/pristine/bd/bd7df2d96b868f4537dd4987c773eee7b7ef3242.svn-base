@charset "UTF-8";

.showcase {
	margin-bottom: 30px;
}

.locker-container {
	perspective: 1000px;
	margin-bottom: 30px !important; 
}

.status {
	background-color: #c8c8c8;
	height: 20px;
	width: 20px;
	margin: 3px;
	border-top-left-radius:	5px;  
	border-top-right-radius: 5px; 
}
.locker {
	background-color: #f2f2f2;
	height: 40px;
	width: 40px;
	margin: 4px;
	border-top-left-radius:	5px;  
	border-top-right-radius: 5px; 
}

.locker p {
	margin-bottom: 0;
	margin-top: 8px;
	text-align: center;
}

.locker.selected {
	background-color: #ffc1c8;
}

.locker.available {
	background: #fff;
	border: solid 1px #ffc1c8;
}

.locker.myLocker {
	background: #407088;
}

.status.selected {
	background-color: #ffc1c8;
}

.status.available {
	background: #fff;
	border: solid 1px #ffc1c8;
}
.status.myLocker {
	background: #407088;
}

.locker:nth-of-type(2){
    margin-right: 25px;
}

.locker:nth-last-of-type(2){
    margin-left: 25px;
}


.showcase{
/*     background: rgba(0,0,0,0.1); */
    padding: 5px 10px;
    border-radius: 5px;
    color:#777;
    list-style: none;
    display: flex;
    justify-content: center;
}

.showcase li{
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 10px;
}

.showcase li small{
    margin-left: 2px;
}

.locker-row {
	display: flex;
}


