   <!-- 성적 어디서 변환이 되든지 자동업데이트하기 -->
   <update id="autoOveScore">
      UPDATE SCORE_RECORD
      SET ove_score = (ATD_SCORE*0.1) +
      (MDT_SCORE*0.4) + (FNL_SCORE*0.4) + (ASG_SCORE*0.1)
   </update>
   
   <insert id="updateLectureEval" parameterType="map">
		insert into lecture_evaluation(
		stu_id, lec_code, le_tot_score, le_status
		)values(
		#{stuId}, #{lecCode}, 0, 'N'
		)
   </insert>
   <update id="updateYesNo" parameterType="map">
   		update score_record
   		set sr_status = 'Y'
   		where
        stu_id = #{stuId}
        and lec_code = #{lecCode}
   </update>
   
   <update id="updateCouTake" parameterType="map">
   	update course_list
   	set cou_take = 'Y'
   	where
   	stu_id = #{stuId}
   	and lec_code = #{lecCode}
   </update>
